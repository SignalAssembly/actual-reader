{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "actual-reader",
  "version": "0.1.0",
  "identifier": "dev.actualreader.app",
  "build": {
    "frontendDist": "../dist-solid",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "pnpm --dir src-solid dev",
    "beforeBuildCommand": "pnpm --dir src-solid build"
  },
  "app": {
    "windows": [
      {
        "title": "Actual Reader",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
